<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:elevation="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp">

<ImageView
    android:id="@+id/chatAvatar"
    android:layout_height="56dp"
    android:layout_width="56dp"
    android:src="@drawable/jokerface"
    android:scaleType="centerCrop"
    android:layout_alignParentTop="false"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:foreground="@drawable/ic_oval_cut"
    android:foregroundTint="?attr/bg"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_centerHorizontal="false"
    android:layout_marginLeft="15dp"
    android:padding="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="25dp"
    android:transitionName="avatarTransition"
    />
    <FrameLayout
        android:id="@+id/chat_expand"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:alpha="1"
        android:elevation="14dp"
        android:outlineProvider="none"
        android:background="?attr/chatSelectHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_speech_buuble"
        android:backgroundTint="?attr/cardPrimaryColor"
        app:layout_constraintTop_toBottomOf="@id/chatlist_name"
        app:layout_constraintStart_toEndOf="@+id/chatAvatar"
        android:paddingLeft="5dp"
        android:paddingEnd="3dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginStart="10dp">
        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="0dp"
            android:src="@drawable/jokerface"
            android:foreground="@drawable/oval_cut_grey"
            android:foregroundTint="?attr/cardPrimaryColor"
            android:id="@+id/chatmessage_image1"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"/>

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            app:layout_constraintCircleRadius="5dp"
            android:src="@drawable/jokerface"
            android:id="@+id/chatmessage_image2"
            android:foreground="@drawable/oval_cut_grey"
            android:foregroundTint="?attr/cardPrimaryColor"
            app:layout_constraintStart_toEndOf="@+id/chatmessage_image1"
            android:layout_marginTop="1dp"
            android:background="@android:color/black"
            android:layout_marginBottom="1dp"/>

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            app:layout_constraintCircleRadius="5dp"
            android:foreground="@drawable/oval_cut_grey"
            android:foregroundTint="?attr/cardPrimaryColor"
            android:src="@drawable/jokerface"
            android:id="@+id/chatmessage_image3"
            android:background="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/chatmessage_image2"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"/>

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="2dp"
            app:layout_constraintCircleRadius="5dp"
            android:foreground="@drawable/oval_cut_grey"
            android:foregroundTint="?attr/cardPrimaryColor"
            android:src="@drawable/jokerface"
            android:id="@+id/chatmessage_image4"
            android:background="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/chatmessage_image3"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"/>
    </android.support.constraint.ConstraintLayout>

<TextView
    android:id="@+id/chatlist_name"
    android:layout_width="wrap_content"
    android:minWidth="60dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="1dp"

    android:layout_marginBottom="1dp"
    android:paddingTop="0dp"
    android:paddingBottom="5dp"
    android:fontFamily="sans-serif-medium"
    android:textColor="?attr/textPrimaryColor"
    android:text="TextView"
   android:gravity="center_vertical"
    app:layout_constraintTop_toTopOf="@id/chatAvatar"

    android:textSize="17sp"
    android:paddingRight="20dp"
    android:paddingLeft="5dp"
    app:layout_constraintStart_toEndOf="@+id/chatAvatar"
    />

<TextView
    android:id="@+id/chatlist_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textSize="12dp"
    android:layout_marginRight="10dp"
    android:textAlignment="center"
    android:background="?attr/bg"
    android:textColor="?attr/textSecondaryColor"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    app:layout_constraintBottom_toBottomOf="@id/chatlist_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/chatlist_name"
    android:gravity="end" />




</android.support.constraint.ConstraintLayout>