<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AvailableContacts">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/available_contacts_tab"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/chatPrimaryDark"/>

    <ImageButton
        android:id="@+id/ac_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/available_contacts_tab"
        app:layout_constraintBottom_toBottomOf="@id/available_contacts_tab"/>

    <ListView
        android:id="@+id/availablContactsList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ac_back_button"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ac_back_button"
        app:layout_constraintBottom_toBottomOf="@id/ac_back_button"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="Available Contacts"/>

</android.support.constraint.ConstraintLayout>