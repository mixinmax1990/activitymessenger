<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/chatAvatar"
        android:layout_height="56dp"
        android:layout_width="56dp"
        android:src="@drawable/jokerface"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="false"
        app:layout_constraintBottom_toBottomOf="@id/expandTop"
        android:foreground="@drawable/ic_oval_cut"
        android:foregroundTint="?attr/cardPrimaryColor"
        android:elevation="100dp"
        android:outlineProvider="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_centerHorizontal="false"
        android:padding="0dp"
        android:visibility="invisible"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:transitionName="avatarTransition"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/expandTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="65dp"/>

    <ImageButton
        android:id="@+id/c_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_back"
        android:layout_marginLeft="5dp"
        android:elevation="100dp"
        android:outlineProvider="none"
        android:tint="?attr/textPrimaryColor"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/chatAvatar"
        app:layout_constraintBottom_toBottomOf="@id/chatAvatar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:clickable="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="typing...."
        android:textSize="11sp"
        android:layout_marginLeft="5dp"
        android:elevation="100dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toBottomOf="@id/chat_tab_div"
        app:layout_constraintLeft_toRightOf="@id/c_back_button"
        app:layout_constraintRight_toLeftOf="@id/chatAvatar"
        android:textColor="@color/design_default_color_primary_dark"
        android:id="@+id/chat_contact_latactiv"/>
    <View
        app:layout_constraintTop_toTopOf="@id/chatAvatar"
        app:layout_constraintBottom_toBottomOf="@id/chatAvatar"
        android:id="@+id/chat_tab_div"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="invisible"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/c_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/c_back_button"
        app:layout_constraintRight_toLeftOf="@id/chatAvatar"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="@id/chat_tab_div"
        android:text="Danny"
        android:textColor="?attr/textPrimaryColor"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:elevation="100dp"
        android:outlineProvider="none"
        android:visibility="invisible"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="99dp"
        android:outlineProvider="none"
        android:id="@+id/contactProfileBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/expandTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="5dp"
        android:background="?attr/cardPrimaryColor"/>
    <!-- Beginning of the Conversation Data -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chatentry"
        android:id="@+id/chathistory"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chatMessageList"
        android:stackFromBottom="true"
        android:elevation="10dp"
        android:outlineProvider="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/expand_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="55dp"/>
    <EditText
        app:layout_constraintTop_toBottomOf="@id/expand_bottom"
        android:id="@+id/chatentry"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="Enter Message"
        android:textColorHint="?attr/textSecondaryColor"
        android:textColor="?attr/textPrimaryColor"
        android:background="@drawable/rounded_edit_chat"
        android:backgroundTint="?attr/contrastBG"
        app:layout_constraintRight_toLeftOf="@id/send_record_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:elevation="100dp"
        android:outlineProvider="none"
        android:layout_margin="5dp"
        android:inputType="textMultiLine" />
    <ImageButton
        android:id="@+id/chat_emoji_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundTint="?attr/textPrimaryColor"
        app:layout_constraintLeft_toLeftOf="@id/chatentry"
        app:layout_constraintTop_toTopOf="@id/chatentry"
        app:layout_constraintBottom_toBottomOf="@id/chatentry"
        app:layout_constraintDimensionRatio="1"
        android:foreground="@drawable/ic_insert_emoticon_black_24dp"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:alpha=".5"
        android:elevation="100dp"
        android:outlineProvider="none"/>
    <ImageButton
        android:id="@+id/chat_entry_attach_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@id/chatentry"
        app:layout_constraintTop_toTopOf="@id/chatentry"
        app:layout_constraintBottom_toBottomOf="@id/chatentry"
        app:layout_constraintDimensionRatio="1"
        android:foreground="@drawable/rotate_attach"
        android:foregroundTint="?attr/textPrimaryColor"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:alpha=".5"
        android:elevation="100dp"
        android:outlineProvider="none"/>
    <Button
        android:background="@drawable/rounded_reco_audio_btn"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toTopOf="@id/chatentry"
        app:layout_constraintBottom_toBottomOf="@id/chatentry"
        android:foreground="@drawable/ic_mic_black_24dp"
        android:foregroundGravity="center"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/send_record_btn"
        app:layout_constraintDimensionRatio="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="110dp"
        android:outlineProvider="none"
        />

</android.support.constraint.ConstraintLayout>