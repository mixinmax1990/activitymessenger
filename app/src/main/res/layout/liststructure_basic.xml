<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="1px"
android:elevation="0dp"
android:paddingTop="0dp"
android:paddingBottom="0dp"
android:paddingLeft="0dp"
android:paddingRight="0dp"
>

    <ImageView
          android:id="@+id/chatAvatar"
          android:layout_height="56dp"
          android:layout_width="56dp"
          android:src="@drawable/jokerface"
        android:scaleType="centerCrop"
          android:layout_alignParentTop="false"
          app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
          android:foreground="@drawable/ic_oval_cut"
        android:foregroundTint="?attr/bg"
          app:layout_constraintLeft_toLeftOf="parent"
          android:layout_centerHorizontal="false"
          android:padding="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:transitionName="avatarTransition"
          />
    <FrameLayout
        android:id="@+id/chat_expand"
        android:visibility="invisible"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:alpha="1"
        android:elevation="5dp"
        android:outlineProvider="none"
        android:background="?attr/chatSelectHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

<TextView
    android:id="@+id/chatlist_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="0dp"
    android:fontFamily="sans-serif-medium"
    android:textColor="?attr/textPrimaryColor"
    android:text="TextView"
    app:layout_constraintBottom_toTopOf="@id/chatlist_message"
    android:textSize="17sp"
    android:paddingBottom="0dp"
    app:layout_constraintStart_toEndOf="@+id/chatAvatar"
    />

<TextView
    android:id="@+id/chatlist_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TextView"
    android:textSize="12dp"
    android:textColor="?attr/textSecondaryColor"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="@id/chatlist_name"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/chatlist_name"
    android:gravity="end"
    android:layout_marginRight="15dp"/>

    <TextView
        android:background="@drawable/incoming_speech_buuble"
        android:backgroundTint="?attr/cardPrimaryColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="TextView"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintStart_toEndOf="@id/chatAvatar"
        app:layout_constraintTop_toTopOf="@id/chatAvatar"
        app:layout_constraintBottom_toBottomOf="@id/chatAvatar"
        android:maxWidth="250dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/chatlist_message"
        android:lineSpacingExtra="2dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="8dp"
        android:paddingLeft="20dp"
        android:paddingTop="4dp"
        android:paddingRight="10dp"
        android:paddingBottom="7dp"
        android:alpha="1"
        android:maxLines="1"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="0dp"/>

</android.support.constraint.ConstraintLayout>