<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ActivityThreeFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5px"
        android:outlineProvider="none"
        android:id="@+id/cover"
        android:alpha=".9"
        android:background="?attr/bg"
        />

<TextView
    android:id="@+id/location_headline"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Location"
    android:elevation="5px"
    android:outlineProvider="none"
    android:paddingBottom="0dp"
    android:paddingTop="10dp"
    android:alpha="1"
    android:scaleType="centerCrop"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="17sp"
    android:gravity="center"
    android:textColor="?attr/textPrimaryColor"
    android:fontFamily="sans-serif-medium"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:id="@+id/dynamic_chats"
        app:layout_constraintTop_toBottomOf="@id/location_headline"

        />

    //Dynamic Content
    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="@id/dynamic_chats"
        app:layout_constraintLeft_toLeftOf="@id/dynamic_chats"
        android:layout_margin="16dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cardElevation="12dp"
        android:id="@+id/view2"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="65dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            android:src="@drawable/club"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@drawable/ic_local_bar_black_24dp"
            android:tint="?attr/textSecondaryColor"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:background="?attr/bg"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7Grad Bar"
        android:textSize="12sp"
        android:elevation="5px"
        android:outlineProvider="none"
        android:layout_marginTop="5dp"
        android:textColor="?attr/textPrimaryColor"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"/>

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="@id/dynamic_chats"
        app:layout_constraintLeft_toRightOf="@id/view2"
        android:layout_margin="16dp"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:cardElevation="12dp"
        android:id="@+id/view3"
        app:cardCornerRadius="15dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:background="@drawable/round_thick_border"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_gravity="top"
            android:layout_height="38dp"
            android:layout_width="match_parent"
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:src="@drawable/christos"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:padding="5dp"
            android:src="@drawable/ic_restaurant_black_24dp"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_gravity="bottom"
            android:background="@color/white"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Christo's Stube"
        android:textSize="12sp"
        android:elevation="5px"
        android:outlineProvider="none"
        android:layout_marginTop="5dp"
        android:textColor="?attr/textPrimaryColor"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@id/view3"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintRight_toRightOf="@id/view3"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/dynamic_chats"
        app:layout_constraintLeft_toRightOf="@id/view3"
        android:layout_margin="16dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha=".3"
        android:id="@+id/view4"
        android:visibility="invisible"
        android:padding="10dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:elevation="5px"
        android:outlineProvider="none"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button_parse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="parse"
        android:visibility="gone"/>


</android.support.constraint.ConstraintLayout>