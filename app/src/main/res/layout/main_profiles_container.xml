<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:alpha="0"
    android:id="@+id/profilesContainer"
    android:visibility="gone">
    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp"
        android:paddingTop="20dp"
        android:alpha="1"
        android:scaleType="centerCrop"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:text="Activity Messenger"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="?attr/textPrimaryColor"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/profiles_headline"
        android:tint="?attr/textPrimaryColor"
        />
<TextView
    android:id="@+id/profiles_headline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Profiles"
    android:fontFamily="sans-serif-medium"
    android:layout_marginBottom="5dp"
    android:textColor="?attr/textPrimaryColor"
    app:layout_constraintTop_toBottomOf="@id/logo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toTopOf="@id/profileAvtOne"
    android:paddingBottom="15dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/profiles_headline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="11px"
        app:cardElevation="11dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:id="@+id/profileAvtOne"
        >
        <ImageView
            android:elevation="11px"
            android:outlineProvider="none"
            android:id="@+id/profileAvatarOne"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar"
            android:tint="?attr/avatarNoImgFG"
            android:background="?attr/avatarNoImgBG"
            android:paddingTop="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAvtOne"
        app:layout_constraintBottom_toTopOf="@id/profileAvtTwo"
        android:id="@+id/profileAvtOneTag"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/textSecondaryColor"
        android:text="Contacts 1"/>

    <android.support.v7.widget.CardView
        android:alpha=".2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/profileAvtOneTag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="11px"
        app:cardElevation="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:id="@+id/profileAvtTwo"
        android:background="@android:color/white"
        >
        <ImageView
            android:elevation="11px"
            android:outlineProvider="none"
            android:id="@+id/profileAvatarTwo"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar"
            android:tint="?attr/avatarNoImgFG"
            android:background="?attr/avatarNoImgBG"
            android:paddingTop="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:alpha=".2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAvtTwo"
        android:textSize="11sp"
        android:id="@+id/profileAvtTwoTag"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/textSecondaryColor"
        android:text="Contacts 2"/>


    <android.support.v7.widget.CardView
        android:alpha="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/profileAvtTwoTag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="11px"
        app:cardElevation="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:id="@+id/profileAvtThree"
        android:background="@android:color/white"
        >
        <ImageView
            android:elevation="11px"
            android:outlineProvider="none"
            android:id="@+id/profileAvatarThree"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar"
            android:tint="?attr/avatarNoImgFG"
            android:background="?attr/avatarNoImgBG"
            android:paddingTop="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:alpha="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAvtThree"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:id="@+id/profileAvtThreeTag"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/textSecondaryColor"
        android:text="Public"/>

    <android.support.v7.widget.CardView
        android:alpha="1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/profileAvtThreeTag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="11px"
        app:cardElevation="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="20dp"
        android:innerRadius="0dp"
        android:id="@+id/profileAvtFour"
        android:background="@android:color/white"
        >
        <ImageView
            android:elevation="11px"
            android:outlineProvider="none"
            android:id="@+id/profileAvatarFour"
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_avatar"
            android:tint="?attr/avatarNoImgFG"
            android:background="?attr/avatarNoImgBG"
            android:paddingTop="12dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.CardView>

    <TextView
        android:alpha="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileAvtFour"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/textSecondaryColor"
        android:text="Work"/>
</android.support.constraint.ConstraintLayout>