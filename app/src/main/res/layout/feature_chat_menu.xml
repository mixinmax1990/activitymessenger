<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/search_chat"
        android:elevation="2px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/rounded_white_chatmessage"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_search_black_24dp"
        app:layout_constraintLeft_toLeftOf="@id/chat_feature_menu"
        app:layout_constraintTop_toTopOf="@id/chat_feature_menu"
        app:layout_constraintBottom_toBottomOf="@id/chat_feature_menu"
        app:layout_constraintRight_toLeftOf="@id/hidden_chat"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded_white_chatmessage"
        android:id="@+id/hidden_chat"
        android:alpha=".4"
        android:src="@drawable/ic_visibility_black_24dp"
        app:layout_constraintRight_toRightOf="@id/chat_feature_menu"
        app:layout_constraintTop_toTopOf="@id/chat_feature_menu"
        app:layout_constraintBottom_toBottomOf="@id/chat_feature_menu"
        app:layout_constraintLeft_toRightOf="@id/search_chat"/>

    <FrameLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/chat_feature_menu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:visibility="visible"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</android.support.constraint.ConstraintLayout>