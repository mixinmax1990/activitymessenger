<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#00E95A22"
                android:endColor="#00FF00B5"
                android:gradientRadius="360"
                android:startColor="#00006386"
                android:type="sweep" />

            <stroke
                android:width="1dp"
                android:color="#00207D94" />
            <corners android:radius="35dp"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/themePrimaryDark" />
            <corners android:radius="35dp"/>
        </shape>
    </item>

</layer-list>